<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle">
			<solid android:color="#00000000"/>
		</shape>
	</item>
    <item
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="-30dp" >
	    <shape 
	    	android:shape="rectangle">
		    <stroke 
		    	android:width="1dip" 
		    	android:color="#FFFFFFFF"/>
		    <corners 
		    	android:radius="30dip" />
		  	<gradient
			    android:angle="270"
			    android:startColor="#96FFFFFF"
			    android:centerColor="#50ffffff"
			    android:endColor="#96FFFFFF"
			    android:type="linear" />
		</shape>
	</item>
</layer-list>